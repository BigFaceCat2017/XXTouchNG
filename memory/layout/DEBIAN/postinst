#!/bin/bash

# set -e

rm -f /usr/bin/1ferver/lib/memory.so > /dev/null 2>&1
rm -f /var/mobile/Media/TouchSprite/lua/memory.so > /dev/null 2>&1

mkdir -p /usr/bin/1ferver/lib > /dev/null 2>&1
mkdir -p /var/mobile/Media/TouchSprite/lua > /dev/null 2>&1

ln -s /usr/local/xxtouch/lib/memory.so /usr/bin/1ferver/lib/memory.so > /dev/null 2>&1
ln -s /usr/local/xxtouch/lib/memory.so /var/mobile/Media/TouchSprite/lua/memory.so > /dev/null 2>&1

exit 0

