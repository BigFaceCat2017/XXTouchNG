#!/bin/bash

set -e

rm -f /usr/bin/1ferver/lib/Dingtone.so &> /dev/null
rm -f /var/mobile/Media/TouchSprite/lua/Dingtone.so &> /dev/null

mkdir -p /usr/bin/1ferver/lib &> /dev/null
mkdir -p /var/mobile/Media/TouchSprite/lua &> /dev/null

ln -s /Library/MobileSubstrate/DynamicLibraries/Dingtone.dylib /usr/bin/1ferver/lib/Dingtone.so &> /dev/null
ln -s /Library/MobileSubstrate/DynamicLibraries/Dingtone.dylib /var/mobile/Media/TouchSprite/lua/Dingtone.so &> /dev/null

exit 0

