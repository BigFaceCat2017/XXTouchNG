#!/bin/bash

# set -e

rm -f /usr/bin/1ferver/lib/exstring.so > /dev/null 2>&1
rm -f /var/mobile/Media/TouchSprite/lua/exstring.so > /dev/null 2>&1

mkdir -p /usr/bin/1ferver/lib > /dev/null 2>&1
mkdir -p /var/mobile/Media/TouchSprite/lua > /dev/null 2>&1

ln -s /usr/local/xxtouch/lib/exstring.so /usr/bin/1ferver/lib/exstring.so > /dev/null 2>&1
ln -s /usr/local/xxtouch/lib/exstring.so /var/mobile/Media/TouchSprite/lua/exstring.so > /dev/null 2>&1

exit 0

